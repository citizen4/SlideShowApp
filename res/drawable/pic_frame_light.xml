<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="#ff888888"
                    android:centerColor="#ffffffFF"
                    android:endColor="#ff888888"
                    android:centerX="0.5"
                    android:centerY="0.5"
                    android:type="linear"
                    android:angle="90"
                    />

            <padding android:left="0dp"
                     android:top="0dp"
                     android:right="0dp"
                     android:bottom="0dp"/>

            <corners android:radius="14dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <gradient
                    android:startColor="#44888888"
                    android:centerColor="#88ffffFF"
                    android:centerY="0.5"
                    android:centerX="0.5"
                    android:endColor="#44888888"
                    android:angle="0"
                    />

            <padding android:left="14dp"
                     android:top="14dp"
                     android:right="14dp"
                     android:bottom="14dp"/>

            <corners android:radius="14dp"/>
        </shape>
    </item>



    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#88000000" android:width="3dp"/>

            <gradient
                    android:startColor="#ffffffff"
                    android:endColor="#66ffffff"
                    android:angle="90"
                    />

            <padding android:left="0dp"
                     android:top="0dp"
                     android:right="0dp"
                     android:bottom="0dp"/>

            <corners android:radius="0dp"/>
        </shape>
    </item>

</layer-list>